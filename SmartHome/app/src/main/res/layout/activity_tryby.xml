<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".TrybyActivity">

    <RelativeLayout
        android:layout_width="368dp"
        android:layout_height="494dp"
        tools:layout_editor_absoluteX="8dp"
        tools:layout_editor_absoluteY="8dp">


        <Button
            android:id="@+id/tryb_dzien"
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:layout_alignParentTop="true"
            android:layout_marginTop="57dp"
            android:onClick="dzien"
            android:text="Tryb dnia" />

        <Button
            android:id="@+id/tryb_wieczor"
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:layout_alignParentTop="true"
            android:layout_marginTop="157dp"
            android:onClick="wieczor"
            android:text="Tryb wieczór" />

        <Button
            android:id="@+id/tryb_noc"
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="161dp"
            android:onClick="noc"
            android:text="Tryb noc" />

        <Button
            android:id="@+id/button5"
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="61dp"
            android:onClick="wylacz_wszystko"
            android:text="Wyłącz wszystko" />
    </RelativeLayout>
</android.support.constraint.ConstraintLayout>