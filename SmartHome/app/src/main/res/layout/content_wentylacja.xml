<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context=".WentylacjaActivity"
    tools:showIn="@layout/activity_wentylacja">

    <RelativeLayout
        android:layout_width="368dp"
        android:layout_height="495dp"
        tools:layout_editor_absoluteX="8dp"
        tools:layout_editor_absoluteY="8dp">

        <TextView
            android:id="@+id/wilgotnosc_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginLeft="31dp"
            android:layout_marginStart="31dp"
            android:layout_marginTop="38dp"
            android:text="Wilgotność powietrza w łazience:        %" />

        <TextView
            android:id="@+id/wilgotnosc_wartosc"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@+id/wilgotnosc_text"
            android:layout_alignBottom="@+id/wilgotnosc_text"
            android:layout_alignEnd="@+id/wilgotnosc_text"
            android:layout_alignRight="@+id/wilgotnosc_text"
            android:layout_marginEnd="11dp"
            android:layout_marginRight="11dp"
            android:text="50" />

        <TextView
            android:id="@+id/wentylator_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_centerVertical="true"
            android:layout_marginStart="75dp"
            android:visibility="invisible"
            android:text="Wentylator:" />

        <ToggleButton
            android:id="@+id/wentyl_on_off"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:layout_marginEnd="53dp"
            android:checked="false"
            android:visibility="invisible"
            android:onClick="went_click"
            android:textOff="Włącz"
            android:textOn="Wyłącz" />

        <ToggleButton
            android:id="@+id/wentyl_tryb"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="120dp"
            android:checked="true"
            android:onClick="went_click"
            android:textOff="Tryb ręczny"
            android:textOn="Tryb automatyczny" />

    </RelativeLayout>
</android.support.constraint.ConstraintLayout>
