<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.michal.smarthome">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".MainActivity"
            android:label="@string/app_name"
            android:theme="@style/AppTheme.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".WstepActivity"
            android:label="@string/title_activity_wstep"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".SwiatloActivity"
            android:label="@string/title_activity_swiatlo"
            android:parentActivityName=".WstepActivity"
            android:theme="@style/AppTheme.NoActionBar">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.example.michal.smarthome.WstepActivity" />
        </activity>
        <activity
            android:name=".ZaslonyActivity"
            android:label="@string/title_activity_zaslony"
            android:parentActivityName=".WstepActivity"
            android:theme="@style/AppTheme.NoActionBar">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.example.michal.smarthome.WstepActivity" />
        </activity>
        <activity
            android:name=".WentylacjaActivity"
            android:label="@string/title_activity_wentylacja"
            android:parentActivityName=".WstepActivity"
            android:theme="@style/AppTheme.NoActionBar">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.example.michal.smarthome.WstepActivity" />
        </activity>
        <activity
            android:name=".TempActivity"
            android:label="@string/title_activity_temp"
            android:parentActivityName=".WstepActivity"
            android:theme="@style/AppTheme.NoActionBar">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.example.michal.smarthome.WstepActivity" />
        </activity>
        <activity
            android:name=".UserActivity"
            android:label="@string/title_activity_user"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".AddUserActivity"
            android:label="@string/title_activity_add_user"
            android:parentActivityName=".UserActivity"
            android:theme="@style/AppTheme.NoActionBar">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.example.michal.smarthome.UserActivity" />
        </activity>
        <activity
            android:name=".EditUserActivity"
            android:label="@string/title_activity_edit_user"
