            android:theme="@style/AppTheme.NoActionBar">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.example.michal.smarthome.UserActivity" />
        </activity>
        <activity
            android:name=".RemoveUserActivity"
            android:label="@string/title_activity_remove_user"
            android:parentActivityName=".UserActivity"
            android:theme="@style/AppTheme.NoActionBar">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.example.michal.smarthome.UserActivity" />
        </activity>
        <activity
            android:name=".TestyActivity"
            android:label="@string/title_activity_testy"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity android:name=".TrybyActivity"></activity>
    </application>

</manifest>