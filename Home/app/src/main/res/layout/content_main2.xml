<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.example.michal.home.Main2Activity"
    tools:showIn="@layout/activity_main2">

    <RelativeLayout
        android:layout_width="368dp"
        android:layout_height="439dp"
        tools:layout_editor_absoluteX="8dp"
        tools:layout_editor_absoluteY="8dp">

        <TextView
            android:id="@+id/swiatlo_kuchnia"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginLeft="29dp"
            android:layout_marginStart="29dp"
            android:layout_marginTop="51dp"
            android:text="Światło w kuchni" />

        <TextView
            android:id="@+id/swiatlo_salon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignEnd="@+id/swiatlo_kuchnia"
            android:layout_alignRight="@+id/swiatlo_kuchnia"
            android:layout_below="@+id/toggleButton"
            android:layout_marginTop="98dp"
            android:text="Światło w salonie" />

        <ToggleButton
            android:id="@+id/toggleButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@+id/swiatlo_kuchnia"
            android:layout_alignBottom="@+id/swiatlo_kuchnia"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_marginEnd="51dp"
            android:layout_marginRight="51dp"
            android:checked="false"
            android:text="ToggleButton"
            android:textOff="Zapal"
            android:textOn="Zgas" />

        <ToggleButton
            android:id="@+id/toggleButton2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@+id/swiatlo_salon"
            android:layout_alignBottom="@+id/swiatlo_salon"
            android:layout_alignLeft="@+id/toggleButton"
            android:layout_alignStart="@+id/toggleButton"
            android:onClick="swiatlo_click"
            android:text="ToggleButton"
            android:textOff="Zapal"
            android:textOn="Zgas" />

    </RelativeLayout>
</android.support.constraint.ConstraintLayout>
